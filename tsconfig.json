{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "ESNext",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}